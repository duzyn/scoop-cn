    "version": "2.0.4",
    "description": "The Syncthing global discovery server",
    "homepage": "https://syncthing.net/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://gh-proxy.com/https://github.com/syncthing/discosrv/releases/download/v2.0.4/stdiscosrv-windows-amd64-v2.0.4.zip",
            "hash": "6c352407e523ace237629b92aa5c1e7804f1ebcadab324b223e6ff92bff2f94d",
            "extract_dir": "stdiscosrv-windows-amd64-v2.0.4"
        },
        "32bit": {
            "url": "https://gh-proxy.com/https://github.com/syncthing/discosrv/releases/download/v2.0.4/stdiscosrv-windows-386-v2.0.4.zip",
            "hash": "a1f1c8d97962d82e906685a2de58408bf66ac32c47466a7c4528aae5e4a15fec",
            "extract_dir": "stdiscosrv-windows-386-v2.0.4"
        }
    },
    "bin": [
        [
            "stdiscosrv.exe",
            "stdiscosrv",
            "-cert \"$dir\\cert.pem\"",
            "-db-dir \"$dir\\discovery.db\"",
            "-key \"$dir\\key.pem\""
        ]
    ],
    "persist": [
        "discovery.db",
        "cert.pem",
        "key.pem"
    ],
    "pre_install": [
        "foreach ($name in @('cert.pem', 'key.pem')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$dir\" -Name $name | Out-Null",
        "    }",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/syncthing/discosrv"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://gh-proxy.com/https://github.com/syncthing/discosrv/releases/download/v$version/stdiscosrv-windows-amd64-v$version.zip",
                "extract_dir": "stdiscosrv-windows-amd64-v$version"
            },
            "32bit": {
                "url": "https://gh-proxy.com/https://github.com/syncthing/discosrv/releases/download/v$version/stdiscosrv-windows-386-v$version.zip",
                "extract_dir": "stdiscosrv-windows-386-v$version"
            }
        }
    }
}
