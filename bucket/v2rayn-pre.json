        "arm64": {
            "url": "https://mirror.ghproxy.com/https://github.com/2dust/v2rayN/releases/download/6.40/v2rayN-arm64.zip",
            "hash": "513a29d0e21b68f612efc242341be2cc90207cc4be68cf1353955e427ce93cd2"
        }
    },
    "extract_dir": "v2rayN",
    "pre_install": [
        "foreach ($form in @('*.exe', '*.dat')) {",
        "    foreach ($_ in Get-ChildItem \"$(appdir xray $global)\\current\" -File) {",
        "        $name = $_.Name",
        "        if ($name -Like $form) {",
        "            Write-Host \"Creating hardlink for $name\"",
        "            New-Item -ItemType HardLink -Path \"$dir\\bin\\Xray\" -Name $name -Target \"$(appdir xray $global)\\current\\$name\" | Out-Null",
        "        }",
        "    }",
        "}"
    ],
    "bin": "v2rayN.exe",
    "shortcuts": [
        [
            "v2rayN.exe",
            "v2rayN"
        ]
    ],
    "persist": "guiConfigs",
    "uninstaller": {
        "script": [
            "if (Test-Path \"$dir\\guiConfigs\\config.json\") {",
            "    Copy-Item \"$dir\\guiConfigs\\config.json\" \"$persist_dir\\guiConfigs\\config.json\" | Out-Null",
            "}"
        ]
    },
    "checkver": {
        "url": "https://api.github.com/repositories/199570071/releases",
        "regex": "download/([\\d.]+)/"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://mirror.ghproxy.com/https://github.com/2dust/v2rayN/releases/download/$version/v2rayN.zip"
            },
            "32bit": {
                "url": "https://mirror.ghproxy.com/https://github.com/2dust/v2rayN/releases/download/$version/v2rayN-32.zip"
            },
            "arm64": {
                "url": "https://mirror.ghproxy.com/https://github.com/2dust/v2rayN/releases/download/$version/v2rayN-arm64.zip"
            }
        }
    }
}
