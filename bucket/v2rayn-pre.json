            "hash": "de862016b2b99e98dee483ec10270a6f130489014ce8f553fd7c6bc7a81b969d"
        },
        "32bit": {
            "url": "https://mirror.ghproxy.com/https://github.com/2dust/v2rayN/releases/download/6.40/v2rayN-32.zip",
            "hash": "0f13a8ed237d3bc1f35e5a6e37f87f8388194e19b45b39a9c91f363624739f65"
